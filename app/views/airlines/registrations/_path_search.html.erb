                <div class="form-group">
                  <label>P3 - Cruise Only</label>
                  <div class="range-input">
                    <input type="text" class="ex_range" value="" name="p3" />
                  </div>
                  <!--<input type="text" placeholder="minimum hours" name="p3" class="form-control">-->
                </div>
              </div>
              <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                  <label>Keyword Search</label>
                  <input name="general" type="text" class="form-control">
                </div>
                <div class="form-group">
                  <label>Nationality</label>
                  <%= country_select('customer','nationality', { include_blank: 'All Nationalities' }, :class=>"form-control") %>
                </div>
                <div class="form-group language-select">
                  <label>Language</label>
                  <select name="languages[]" class="form-control" id="example-getting-started" multiple="multiple">
                    <% ::Refinery::Languages::Language.all.each do |item| %>
                        <option value="<%= item.id %>"><%= item.name %></option>
                    <% end %>
                  </select>
                  <script type="application/javascript">
                      $(function() {
                          $('#example-getting-started').multiselect({
                              nonSelectedText: 'Please Select Languages'
                          });
                      });
                  </script>
                </div>
              </div>
            </div>
            <div class="text-right">
              <a class="pilot_adv btn btn-window">Show Advanced Search</a><button type="submit" class="btn btn-green">Search</button>
            </div>
          </div>
        </form>
      </div>
    </div>

