<script type="application/javascript">
    $('.all_paths').hide();
    $('.all_paths.pilot').hide();
    $('.all_advanced').hide();

    $('.career_path').click(function() {
        $('.all_paths').hide();

        var career = $(this).data('value');
        $('.'+ career).show();
        $('.career_field').val($(this).val());
    });

    $('.pilot_adv').click(function(){
        $('.pilot_advanced').toggle();
        if($(this).html() == 'Show Advanced Search'){
          $(this).html('Hide Advanced Search')
        }else{
          $(this).html('Show Advanced Search')
        }
    });

    $('.cabin_adv').click(function(){
        $('.cabin_advanced').toggle();
        if($(this).html() == 'Show Advanced Search'){
            $(this).html('Hide Advanced Search')
        }else{
            $(this).html('Show Advanced Search')
        }
    });

    $('.eng_adv').click(function(){
        $('.eng_advanced').toggle();
        if($(this).html() == 'Show Advanced Search'){
            $(this).html('Hide Advanced Search')
        }else{
            $(this).html('Show Advanced Search')
        }
    });

</script>


