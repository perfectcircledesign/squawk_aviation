                </div>
              </div>
              <div class="form-group">
                <label>Aircraft</label>
                <select name="aircraft_type" class="form-control">
                  <option value="">All Aircraft</option>
                  <% ::Refinery::Aircrafts::Aircraft.order(:name).all.each do |item| %>
                      <option value="<%= item.id %>"><%= item.name %></option>
                  <% end %>
                </select>
              </div>
            </div>

            <div class="all_advanced pilot_advanced">
              <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                  <label>P1 - Captain</label>
                  <div class="range-input">
                    <input type="text" class="ex_range" value="" name="p1" />
                  </div>
                  <!--<input type="text" placeholder="minimum hours" name="p1" class="form-control">-->
                </div>
                <div class="form-group">
                  <label>P2 - First Officer</label>
                  <div class="range-input">
