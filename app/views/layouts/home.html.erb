    <% posts = Refinery::Blog::Post.live.first(3) %>
    <% if posts.present? %>
      <div class="blogs">
        <div class="container">
          <div class="row">
            <% posts.each do |post| %>
              <div class="col-xs-12 col-sm-6 col-md-4">
                <%= link_to refinery.blog_post_path(post) do %>
                  <div class="blog-post">
                    <% if post.image.present? %>
                      <%= image_fu post.image, '375x250#c', class: 'img-responsive' %>
                    <% else %>
                      <img src="assets/blank-blog.gif" class="img-responsive">
                    <% end %>
                    <div class="details">
                      <h3><%= post.title %></h3>
                      <% if post.custom_teaser.present? %>
                        <%= raw post.custom_teaser %>
                      <% else %>
                        <%= raw truncate(post.body, length: 200) %>
                      <% end %>
                      <div class="btn btn-grey">Read More</div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
