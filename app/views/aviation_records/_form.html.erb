        <!--</div>-->
      <!--</div>-->
    <!--</div>-->
    <div class="form-group">
      <div class="row">
        <div class="col-xs-4">
          <label>Position Held</label>
        </div>
        <div class="col-xs-8">
          <%= f.select :position_held, AviationRecord::POSITION_HELD, {:include_blank => true}, :class=>"form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-4">
          <label>Currently employed here</label>
        </div>
        <div class="col-xs-8">
          <%= f.check_box :current_work, :class=>"boolean optional hidden aviation_current_work" %>
          <label for="aviation_record_current_work" class="form-checkbox modal-checkbox"></label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-4">
          <label>From</label>
        </div>
        <div class="col-xs-8">
          <%= f.text_field :start_date, :label => false, :class => "date_pick", required: true  %>
        </div>
      </div>
    </div>
    <div class="form-group leave_period">
      <div class="row">
        <div class="col-xs-4">
          <label>Notice period</label>
        </div>
        <div class="col-xs-8">
          <%= f.select :notice_period, AviationRecord::NOTICEPERIOD, {:include_blank => true}, :class=>"form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group still_working_here">
      <div class="row">
        <div class="col-xs-4">
          <label>To</label>
        </div>
        <div class="col-xs-8">
          <%= f.text_field :end_date, :label => false, :class => "date_pick"  %>
        </div>
      </div>
    </div>
