          <!--<%#= f.text_field :total, :label => false, :placeholder => "Total", :class => "form-control fc2"  %>-->
        <!--</div>-->
      <!--</div>-->
    <!--</div>-->
    <div class="form-group still_working_here">
      <div class="row">
        <div class="col-xs-4">
          <label>Reason For Leaving</label>
        </div>
        <div class="col-xs-8">
          <%= f.select :reason_for_leaving, AviationRecord::REASONS, {:include_blank => true}, :class => "form-control fc2" %>
          <%#= f.text_field :reason_for_leaving, :label => false, :class => "form-control fc2"  %>
        </div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-window btn-green" data-dismiss="modal">Close</button>
    <% if @aviation_record.id.present? %>
      <%= f.button :submit, "Update Details", :class=>"btn btn-green" %>
    <% else %>
      <%= f.button :submit, "Create new", :class=>"btn btn-green" %>
