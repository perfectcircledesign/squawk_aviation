<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal admin' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :email, :placeholder => 'Email Address' %>    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn btn-custom' %>
    <%= render :partial => "shared/links" %>
  </div>

<% end %>

