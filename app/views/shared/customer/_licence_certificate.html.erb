<div class="card details-card" id="certificate_tag">
  <h2>Licence and Certificates Details</h2>
  <% if current_customer.present? %>
    <%= link_to load_new_form_path(type:"aviation_certification", method_type: :post), class:"edit", remote:true do %>
          <img src="/assets/edit.png">
    <% end %>
  <% end %>
  <% if @customer.aviation_certification_details.present? %>
      <% @customer.aviation_certification_details.each do |item| %>
          <div class="details-panel">
            <h6><%= item.license_type %></h6>
            <% if current_customer.present? %>
              <%= link_to load_new_form_path(type:"aviation_certification", id: item.id, method_type: :put), class:"btn-edit", remote:true do %>
                  <img src="/assets/edit.png" width="10" height="10">
              <% end %>
              <%= link_to aviation_certification_details_path(id:item.id),
                          :class => "btn-delete",
                          :confirm => "Are you sure you want to delete: " + item.license_type,
                          :method => :delete do %>
                  <span aria-hidden="true" class="close">&times;</span>
              <% end %>
            <% end %>
            <table>
              <tr>
                <td>
                  License authority:
                </td>
                <td>
                  <%= item.license_authority %>
                </td>
                <td>
                  Date of expiry:
                </td>
                <td>
                  <%= item.date_of_expiry %>
                </td>
              </tr>
              <tr>
                <td>
                  Endorsements:
                </td>
                <td>
                  <% if item.mcc %>
                      MCC
                  <% end %>
                  <% if item.dangerous_goods %>
                      Dangerous Goods
                  <% end %>
                  <% if item.crm %>
                      CRM
                  <% end %>
                  <% if item.tcas_acas %>
                      TCAS/ACAS
                  <% end %>
                  <% if item.lvo %>
                      LVO
                  <% end %>
                  <% if item.rnav_gnss %>
                      RNAV,GNSS
                  <% end %>
                  <% if item.rvsm %>
                      RVSM
                  <% end %>
                  <% if item.cfit_gpws %>
                      CFIT/GPWS
                  <% end %>
                  <% if item.etops %>
                      ETOPS
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
      <% end %>
  <% else %>
      <div class="blank-state">
        <img src="/assets/certificate.jpg">
        <h2>What licences or Certificates do you have?</h2>
        <%= link_to 'Add Licence and Certificates', load_new_form_path(type:"aviation_certification", method_type: :post), class:"btn btn-green btn-window btn-lrg", remote:true %>
      </div>
  <% end %>
</div>