<div class="card details-card" id="education_tag">
  <h2>Education Details</h2>
  <% if current_customer.present? %>
    <%= link_to load_new_form_path(type:"aviation_education", method_type: :post), class:"edit", remote:true do %>
        <img src="/assets/edit.png">
    <% end %>
  <% end %>
  <% if @customer.aviation_education_details.present? %>
      <% @customer.aviation_education_details.each do |item| %>
          <div class="details-panel">
            <h6><%= item.program %></h6>
            <% if current_customer.present? %>
              <%= link_to load_new_form_path(type:"aviation_education", id: item.id, method_type: :put), class:"btn-edit", remote:true do %>
                  <img src="/assets/edit.png" width="10" height="10">
              <% end %>
              <%= link_to aviation_education_details_path(id:item.id),
                          :class => "btn-delete",
                          :confirm => "Are you sure you want to delete: " + item.program,
                          :method => :delete do %>
                  <span aria-hidden="true" class="close">&times;</span>
              <% end %>
            <% end %>
            <table>
              <tr>
                <td>
                  Qualification:
                </td>
                <td>
                  <%= item.program %>
                </td>
                <td>
                  Institution:
                </td>
                <td>
                  <%= item.institution %>
                </td>
              </tr>
              <tr>
                <td>
                  Year Graduated:
                </td>
                <td>
                  <%= item.period %>
                </td>
              </tr>
            </table>
          </div>
      <% end %>
  <% else %>
      <div class="blank-state">
        <img src="/assets/certified.jpg">
        <h2>Add your Qualifications</h2>
        <%= link_to 'Add Education', load_new_form_path(type:"aviation_education", method_type: :post), class:"btn btn-green btn-window btn-lrg", remote:true %>
      </div>
  <% end %>
</div>