<%= form_for [refinery, :airlines_admin, @airline] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @airline,
              :include_object_name => true %>

  
    <div class='field'>
      <%= f.label :name, 'Contact Person' -%>
      <%= f.text_field :name, :class => 'larger widest'  -%>

    </div>

    <div class='field'>
      <%= f.label :airline_name -%>
      <%= f.text_field :airline_name  -%>

    </div>

    <div class='field'>
      <%= f.label :company_size -%>
      <%= f.text_field :company_size  -%>

    </div>

    <div class='field'>
      <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
        <ul id='page_parts'>
          <% [:description].each_with_index do |part, part_index| %>
              <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
                <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/airlines/airline", :default => part.to_s.titleize), "##{part}" %>
              </li>
          <% end %>
        </ul>
        <div id='page_part_editors'>
          <% [:description].each do |part| %>
              <div class='page_part' id=''>
                <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
              </div>
          <% end %>
        </div>
      </div>

    </div>

    <div class='field'>
      <%= f.label :head_office_address -%>
      <%= f.text_field :head_office_address, :class => 'larger widest'  -%>

    </div>

    <div class='field'>
      <%= f.label :logo -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :logo_id,
                 :image => @airline.logo,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :image1 -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image1_id,
                 :image => @airline.image1,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :image2 -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image2_id,
                 :image => @airline.image2,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :image3 -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image3_id,
                 :image => @airline.image3,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :image4 -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image4_id,
                 :image => @airline.image4,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :image5 -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :image5_id,
                 :image => @airline.image5,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :sliver -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :sliver_id,
                 :image => @airline.sliver,
                 :toggle_image_display => false %>
    </div>

    <div class='field'>
      <%= f.label :email -%>
      <%= f.text_field :email  -%>

    </div>

    <div class='field'>
      <%= f.label :website -%>
      <%= f.text_field :website  -%>

    </div>

    <div class='field'>
      <%= f.label :facebook -%>
      <%= f.text_field :facebook  -%>

    </div>

    <div class='field'>
      <%= f.label :linkedin -%>
      <%= f.text_field :linkedin  -%>

    </div>

    <div class='field'>
      <%= f.label :twitter -%>
      <%= f.text_field :twitter  -%>

    </div>

    <div class='field'>
      <%= f.label :googleplus -%>
      <%= f.text_field :googleplus  -%>

    </div>

    <div class='field'>
      <%= f.label :valid_airline -%>
      <%= f.check_box :valid_airline  -%>
    </div>

    <div class='field'>
      <%= f.label :password -%>
      <%= f.text_field :password  -%>

    </div>

    <div class='field'>
      <%= f.label :password_confirmation -%>
      <%= f.text_field :password_confirmation  -%>

    </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.airlines.admin.airlines.airline'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @airline.name) %>
<% end -%>
