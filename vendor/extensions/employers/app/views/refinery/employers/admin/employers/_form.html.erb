<%= form_for [refinery, :employers_admin, @employer] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @employer,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @employer.image,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.employers.admin.employers.employer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @employer.name) %>
<% end -%>
