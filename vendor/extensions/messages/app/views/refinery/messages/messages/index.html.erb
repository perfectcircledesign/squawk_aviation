                <!--<p>Their message's placeholder text goes in here to see ahead</p>-->
                <!--<span class="message-count">1</span>-->
              <!--</div>-->
            <!--</a>-->
          <!--</li>-->
        </ul>
      </div>

      <div class="message-display">
        <div class="header">
          <!--START-->
          <div class="media their_avatar_mobile"></div>
          <!--END-->
        </div>

        <div class="message-container">

        <!-- TODO: Linkup the create.js.erb jquery with these elements. Scroll to the bottom and autoexpand the textarea -->

          <div class="live-message" id="live-message"></div>


        </div>
      </div>
    </div>


    <script type="application/javascript">
      $(window).load(function () {
        <% if params[:msg_click].present? %>
          $( ".msg_click<%= params[:msg_click] %>").trigger( "click" );
        <% end %>
      });
    </script>

<% end %>


