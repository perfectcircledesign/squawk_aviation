<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(line_item) -%>">
  <span class='title'>
    <%= line_item.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.line_items_line_item_path(line_item),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_line_items_admin_line_item_path(line_item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.line_items_admin_line_item_path(line_item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => line_item.title),
        :method => :delete %>
  </span>
</li>
