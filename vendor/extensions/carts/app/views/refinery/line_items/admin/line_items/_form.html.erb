<%= form_for [refinery, :line_items_admin, @line_item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @line_item,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :cart_id -%>
    <%= f.number_field :cart_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :product_id -%>
    <%= f.number_field :product_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :quantity -%>
    <%= f.number_field :quantity  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.line_items.admin.line_items.line_item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') %>
<% end -%>
