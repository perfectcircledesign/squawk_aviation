<ul>
  <% if ::Refinery::Carts::Admin::CartsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.carts_admin_carts_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_carts_admin_cart_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Carts::Admin::CartsController.sortable? && ::Refinery::Carts::Cart.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Carts"),
                 refinery.carts_admin_carts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Carts"),
                 refinery.carts_admin_carts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
