<%= form_for [refinery, :carts_admin, @cart] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cart,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :customer_id -%>
    <%= f.number_field :customer_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :is_current -%>
    <%= f.check_box :is_current, :checked => @cart[:is_current]  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.carts.admin.carts.cart'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') %>
<% end -%>
