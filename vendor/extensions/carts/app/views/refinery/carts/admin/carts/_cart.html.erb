<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(cart) -%>">
  <span class='title'>
    <%= cart.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.cart_path(cart),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_carts_admin_cart_path(cart),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.carts_admin_cart_path(cart),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => cart.title),
        :method => :delete %>
  </span>
</li>
