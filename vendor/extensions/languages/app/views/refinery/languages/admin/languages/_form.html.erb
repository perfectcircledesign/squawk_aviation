<%= form_for [refinery, :languages_admin, @language] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @language,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.languages.admin.languages.language'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @language.name) %>
<% end -%>
