<ul>
  <% if ::Refinery::Languages::Admin::LanguagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.languages_admin_languages_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_languages_admin_language_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Languages::Admin::LanguagesController.sortable? && ::Refinery::Languages::Language.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Languages"),
                 refinery.languages_admin_languages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Languages"),
                 refinery.languages_admin_languages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
