<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(aircraft) -%>">
  <span class='title'>
    <%= aircraft.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.aircrafts_aircraft_path(aircraft),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_aircrafts_admin_aircraft_path(aircraft),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.aircrafts_admin_aircraft_path(aircraft),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => aircraft.name),
        :method => :delete %>
  </span>
</li>
