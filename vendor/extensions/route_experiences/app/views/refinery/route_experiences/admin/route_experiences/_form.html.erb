<%= form_for [refinery, :route_experiences_admin, @route_experience] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @route_experience,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :continent -%>
    <%= f.select :continent, ::Refinery::RouteExperiences::RouteExperience::CONTINENTS %>
  </div>
  
  <div class='field'>
    <%= f.label :airport -%>
    <%= f.text_field :airport, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.route_experiences.admin.route_experiences.route_experience'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @route_experience.continent) %>
<% end -%>
