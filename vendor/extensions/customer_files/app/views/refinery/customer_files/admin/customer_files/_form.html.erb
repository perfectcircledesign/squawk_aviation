<%= form_for [refinery, :customer_files_admin, @customer_file] do |f| -%>
  <%= render '/refinery/admin/error_messages',
             :object => @customer_file,
             :include_object_name => true %>

  <%= f.file_field :file %>

  <%= f.label :customer_id %>
  <%= f.collection_select :customer_id, ::Refinery::Customers::Customer.order(:first_name), :id , :name, {:prompt => "-- Please select when relevant --"}, {} -%>


  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.customer_files.admin.customer_files.customer_file'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @customer_file.file_mime_type) %>
<% end -%>
