<% content_for :body_content_title do %>
  <%= @business.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @business.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @business.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="businesses">
      <% @businesses.each do |business| %>
        <li>
          <%= link_to business.name, refinery.businesses_business_path(business) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
