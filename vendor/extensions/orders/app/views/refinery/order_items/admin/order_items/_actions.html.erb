<ul>
  <% if ::Refinery::OrderItems::Admin::OrderItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.order_items_admin_order_items_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_order_items_admin_order_item_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::OrderItems::Admin::OrderItemsController.sortable? && ::Refinery::OrderItems::OrderItem.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Order Items"),
                 refinery.order_items_admin_order_items_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Order Items"),
                 refinery.order_items_admin_order_items_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
