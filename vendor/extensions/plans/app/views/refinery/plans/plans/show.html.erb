<% content_for :body_content_title do %>
  <%= @plan.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @plan.name %>
    </p>
  </section>
  <section>
    <h1>Cost</h1>
    <p>
      <%=raw @plan.cost %>
    </p>
  </section>
  <section>
    <h1>Currency</h1>
    <p>
      <%=raw @plan.currency %>
    </p>
  </section>
  <section>
    <h1>Duration</h1>
    <p>
      <%=raw @plan.duration %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @plan.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="plans">
      <% @plans.each do |plan| %>
        <li>
          <%= link_to plan.name, refinery.plans_plan_path(plan) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
